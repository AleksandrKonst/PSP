@using Microsoft.AspNetCore.Identity
@model AuthWebApi.DTO.ViewModels.Claim.EditViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}
<h1>Изменить утверждение</h1>

<h5>@Model.ClaimValue</h5>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group edit-text">
                <label asp-for="UserId" class="control-label user-label">UserId</label>
                <input asp-for="UserId" placeholder="Введите UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group edit-text">
                <label asp-for="ClaimType" class="control-label user-label">ClaimType</label>
                <input asp-for="ClaimType" placeholder="Введите ClaimType" class="form-control" />
                <span asp-validation-for="ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group edit-text">
                <label asp-for="ClaimValue" class="control-label user-label">ClaimValue</label>
                <input asp-for="ClaimValue" placeholder="Введите ClaimValue" class="form-control" />
                <span asp-validation-for="ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group edit-text">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="panel-table-link">Вернуться</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}