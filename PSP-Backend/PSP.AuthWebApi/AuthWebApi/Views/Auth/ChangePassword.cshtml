@model AuthWebApi.DTO.ViewModels.Auth.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<div class="row auth-box">
    <div class="col-md-4 user-form">
        <img src="/psp.png" class="auth-logo" alt="No Logo"/>
        <form asp-controller="Auth" asp-action="ChangePassword" method="post" class="auth-form">
            <div class="edit-text">
                <label asp-for="Password" class="control-label user-label">Пароль</label>
                <input asp-for="Password" placeholder="Введите пароль" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="edit-text">
                <label asp-for="ConfirmPassword" class="control-label user-label">Новый пароль</label>
                <input asp-for="ConfirmPassword" placeholder="Введите новый пароль" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="edit-text">
                <button type="submit" class="btn btn-primary">Войти</button>
            </div>
            <input type="hidden" asp-for="Email" class="form-control" />
            <input type="hidden" asp-for="Token" class="form-control" />
        </form>
        <p class="user-info">Приложению "PSP" будет предоставлен доступ к вашим данным: имени, адресу электронной почты. 
            Прежде чем начать работу с приложением "PSP", вы можете ознакомиться с его политикой конфиденциальности 
            и условиями использования.</p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}