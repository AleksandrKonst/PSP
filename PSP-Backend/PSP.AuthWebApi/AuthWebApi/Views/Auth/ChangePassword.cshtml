@model AuthWebApi.DTO.ViewModels.Auth.ChangePasswordViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row auth-box">
    <div class="col-md-4 user-form">
        <img src="/psp.png" class="auth-logo" alt="No Logo"/>
        <form asp-controller="Auth" asp-action="Login" method="post" class="auth-form">
            <div class="edit-text">
                <label asp-for="Password" class="control-label user-label">Пароль</label>
                <input asp-for="Password" placeholder="Введите пароль" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="edit-text">
                <label asp-for="NewPassword" class="control-label user-label">Новый пароль</label>
                <input asp-for="NewPassword" placeholder="Введите новый пароль" class="form-control"/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="edit-text">
                <label asp-for="NewPasswordConfirm" class="control-label user-label">Подтвердите новый пароль</label>
                <input asp-for="NewPasswordConfirm" placeholder="Введите новый пароль" class="form-control"/>
                <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
            </div>
            <div class="edit-text">
                <button type="submit" class="btn btn-primary">Войти</button>
            </div>
        </form>
        <p class="user-info">Приложению "PSP" будет предоставлен доступ к вашим данным: имени, адресу электронной почты. 
            Прежде чем начать работу с приложением "PSP", вы можете ознакомиться с его политикой конфиденциальности 
            и условиями использования.</p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}