@model AuthWebApi.DTO.ViewModels.Manage.DeleteViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "AdminLayout";
}

<h1>Удалить</h1>
<hr />
<h3>Пользователя @Model.Username</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name">Имя</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Surname">Фамилия</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Patronymic">Отчество</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Patronymic
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Birthday">День рождения</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Birthday
        </dd>
    </dl>
    <h3>Вы хотите удалить этого пользователя?</h3>
    <form asp-action="Delete">
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>