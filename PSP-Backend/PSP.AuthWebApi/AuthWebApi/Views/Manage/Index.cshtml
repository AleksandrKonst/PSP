@model IEnumerable<UserDTO>

@{
    ViewData["Title"] = "Users";
    Layout = "_AdminLayout";
}

<h1>Пользователи</h1>

<p>
    <a asp-action="Create">Создать пользователя</a>
</p>
<div class="form-outline mb-4" data-mdb-input-init>
  <input type="search" class="form-control" id="datatable-search-input" placeholder="Поиск">
</div>
<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th>
            <label asp-for="@Model.First().Login">Логин</label>
        </th>
        <th>
            <label asp-for="@Model.First().FIO">ФИО</label>
        </th>
        <th>
            <label asp-for="@Model.First().Role">Роль</label>
        </th>
        <th>
            <label asp-for="@Model.First().Email">Почта</label>
        </th>
        <th>
            <label asp-for="@Model.First().EmailConfirmed">Подтверждение почты</label>
        </th>
        <th>
            <label>Изменить</label>
        </th>
        <th>
            <label>Удалить</label>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.Login
            </td>
            <td>
                @item.FIO
            </td>
            <td>
                @item.Role
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.EmailConfirmed
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Изменить</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="input-group mb-3">
    <a asp-controller="Profile" asp-action="Index" class="list-group-item list-group-item-action py-2 ripple" style="max-width: 50px" aria-current="true">
        <i class="bi bi-arrow-bar-left"></i>
    </a>
    <input type="number" class="form-control" style="max-width: 80px"/>
    <a asp-controller="Profile" asp-action="Index" class="list-group-item list-group-item-action py-2 ripple" style="max-width: 50px" aria-current="true">
        <i class="bi bi-arrow-bar-right"></i>
    </a>
</div>