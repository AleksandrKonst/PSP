@using Microsoft.AspNetCore.Identity
@model AuthWebApi.DTO.ViewModels.Manage.CreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<h1>Создать пользователя</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group edit-text">
                <label asp-for="Username" class="control-label user-label">Логин</label>
                <input asp-for="Username" placeholder="Введите логин" class="form-control"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group edit-text">
                <label asp-for="Email" class="control-label user-label">Email</label>
                <input asp-for="Email" placeholder="Введите почту" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group edit-text">
                <label asp-for="Name" class="control-label user-label">Имя</label>
                <input asp-for="Name" placeholder="Введите имя" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group edit-text">
                <label asp-for="Surname" class="control-label user-label">Фамилия</label>
                <input asp-for="Surname" placeholder="Введите фамилию" class="form-control"/>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group edit-text">
                <label asp-for="Patronymic" class="control-label user-label">Отчество</label>
                <input asp-for="Patronymic" placeholder="Введите отчество" class="form-control"/>
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group edit-text">
                <label asp-for="Birthday" class="control-label user-label">День рождения</label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group edit-text">
                <label asp-for="Password" class="control-label user-label">Пароль</label>
                <input asp-for="Password" placeholder="Введите пароль" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group edit-text">
                <label asp-for="ConfirmPassword" class="control-label user-label">Повторите пароль</label>
                <input asp-for="ConfirmPassword"  placeholder="Введите пароль" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="block edit-text">
                <label class="user-label">Роль</label>
                <select class="form-select" asp-for="Role" asp-items="@(new SelectList(ViewBag.Roles, nameof(IdentityRole.Name), nameof(IdentityRole.Name)))"></select>
            </div>
            <div class="form-group edit-text">
                <button class="btn btn-primary" type="submit">Создать</button>
                <a asp-action="Index" class="panel-table-link">Вернуться</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}