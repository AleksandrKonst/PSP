@model AuthWebApi.DTO.ViewModels.Client.InfoViewModel

@{
    ViewData["Title"] = "Clients";
    Layout = "_AdminLayout";
}

<h1>Подробно</h1>
<hr />
<h3>Клиент @Model.ClientId</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label>AllowedGrantTypes</label>
        </dt>
        <dd class="col-sm-10">
            @(string.Join(", ", Model.AllowedGrantTypes))
        </dd>
        <dt class="col-sm-2">
            <label asp-for="RequirePkce">RequirePkce</label>
        </dt>
        <dd class="col-sm-10">
            @Model.RequirePkce
        </dd>
        <dt class="col-sm-2">
            <label asp-for="RequireClientSecret">RequireClientSecret</label>
        </dt>
        <dd class="col-sm-10">
            @Model.RequireClientSecret
        </dd>
        <dt class="col-sm-2">
            <label>RedirectUris</label>
        </dt>
        <dd class="col-sm-10">
            @(string.Join(", ", Model.RedirectUris))
        </dd>
        <dt class="col-sm-2">
            <label>AllowedScopes</label>
        </dt>
        <dd class="col-sm-10">
            @(string.Join(", ", Model.AllowedScopes))
        </dd>
        <dt class="col-sm-2">
            <label asp-for="AllowAccessTokensViaBrowser">AllowAccessTokensViaBrowser</label>
        </dt>
        <dd class="col-sm-10">
            @Model.AllowAccessTokensViaBrowser
        </dd>
        <dt class="col-sm-2">
            <label asp-for="AllowOfflineAccess">AllowOfflineAccess</label>
        </dt>
        <dd class="col-sm-10">
            @Model.AllowOfflineAccess
        </dd>
        <dt class="col-sm-2">
            <label asp-for="RequireConsent">RequireConsent</label>
        </dt>
        <dd class="col-sm-10">
            @Model.RequireConsent
        </dd>
        <dt class="col-sm-2">
            <label>ClientSecrets</label>
        </dt>
        <dd class="col-sm-10">
            @(string.Join(", ", Model.ClientSecrets))
        </dd>
        <dt class="col-sm-2">
            <label>PostLogoutRedirectUris</label>
        </dt>
        <dd class="col-sm-10">
            @(string.Join(", ", Model.PostLogoutRedirectUris))
        </dd>
        <dt class="col-sm-2">
            <label>AllowedCorsOrigins</label>
        </dt>
        <dd class="col-sm-10">
            @(string.Join(", ", Model.AllowedCorsOrigins))
        </dd>
    </dl>
    <form>
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
