@model AuthWebApi.DTO.ViewModels.Client.InfoViewModel

@{
    ViewData["Title"] = "Clients";
    Layout = "_AdminLayout";
}

<h1>Подробно</h1>
<hr />
<h3>Клиент @Model.ClientId</h3>
<div>
    <dl class="row edit-box">
        <div class="col"> <strong>AllowedGrantTypes</strong> </div>
        <div class="col">@(string.Join(", ", Model.AllowedGrantTypes))</div>
        <div class="w-100 edit-text"></div>
        
        
        <div class="col">
            <strong>RequirePkce</strong>
        </div>
        <div class="col">
            <div class="form-check form-switch">
                <input asp-for="RequirePkce" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
            </div>
        </div>
        <div class="w-100 edit-text"></div>
        
        <div class="col">
            <strong>RequireClientSecret</strong>
        </div>
        <div class="col">
            <div class="form-check form-switch">
                <input asp-for="RequireClientSecret" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
            </div>
        </div>
        <div class="w-100 edit-text"></div>
        
        <div class="col"> <strong>RedirectUris</strong> </div>
        <div class="col">@(string.Join(", ", Model.RedirectUris))</div>
        <div class="w-100 edit-text"></div>
        
        <div class="col"> <strong>AllowedScopes</strong> </div>
        <div class="col">@(string.Join(", ", Model.AllowedScopes))</div>
        <div class="w-100 edit-text"></div>
        
        <div class="col">
            <strong>AllowAccessTokensViaBrowser</strong>
        </div>
        <div class="col">
            <div class="form-check form-switch">
                <input asp-for="AllowAccessTokensViaBrowser" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
            </div>
        </div>
        <div class="w-100 edit-text"></div>
        
        <div class="col">
            <strong>AllowOfflineAccess</strong>
        </div>
        <div class="col">
            <div class="form-check form-switch">
                <input asp-for="AllowOfflineAccess" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
            </div>
        </div>
        <div class="w-100 edit-text"></div>
        
        <div class="col">
            <strong>RequireConsent</strong>
        </div>
        <div class="col">
            <div class="form-check form-switch">
                <input asp-for="RequireConsent" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
            </div>
        </div>
        <div class="w-100 edit-text"></div>
        
        <div class="col"> <strong>ClientSecrets</strong> </div>
        <div class="col">@(string.Join(", ", Model.ClientSecrets))</div>
        <div class="w-100 edit-text"></div>
        
        <div class="col"> <strong>PostLogoutRedirectUris</strong> </div>
        <div class="col">@(string.Join(", ", Model.PostLogoutRedirectUris))</div>
        <div class="w-100 edit-text"></div>
        
        <div class="col"> <strong>AllowedCorsOrigins</strong> </div>
        <div class="col">@(string.Join(", ", Model.AllowedCorsOrigins))</div>
        <div class="w-100 edit-text"></div>
    </dl>
    <form>
        <a asp-action="Index" class="panel-table-link">Вернуться</a>
    </form>
</div>