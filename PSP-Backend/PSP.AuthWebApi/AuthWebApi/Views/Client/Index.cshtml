@model AuthWebApi.DTO.ViewModels.Client.IndexViewModel

@{
    ViewData["Title"] = "Clients";
    Layout = "_AdminLayout";
}

<div class="panel-nav">
    <a class="btn btn-warning" asp-action="Create">Создать клиента</a>
</div>

<h1>Клиенты</h1>

<hr />
<div>
    <form asp-action="Index" method="get" class="input-group rounded" style="background-color: #ececec">
        <input type="text" name="search" value="@Model.Search" class="form-control rounded" placeholder="Поиск"/>
        <input type="submit" value="" class="input-group-text border-0 search-submit"/>
    </form>
</div>
<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th>
            <label asp-for="@Model.Clients">Клиент</label>
        </th>
        <th>
            <label>Подробно</label>
        </th>
        <th>
            <label>Изменить</label>
        </th>
        <th>
            <label>Удалить</label>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Clients) {
        <tr>
            <td>
                @item
            </td>
            <td>
                <a asp-action="Info" asp-route-id="@item" class="panel-table-link">Подробно</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item" class="panel-table-link">Изменить</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item" class="panel-table-link">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="input-group mb-3">
    <a asp-controller="Client" asp-action="Index" asp-route-search="@Model.Search" asp-route-page="@(Model.Page > 1? Model.Page - 1 : 1)" 
       class="list-group-item list-group-item-action py-2 ripple arrow" aria-current="true">
        <i class="bi bi-arrow-bar-left"></i>
    </a>
    <p class="panel-page-count">@Model.Page</p>
    <a asp-controller="Client" asp-action="Index" asp-route-search="@Model.Search" asp-route-page="@(Model.Page < Model.MaxPage ? Model.Page + 1 : Model.Page)" 
       class="list-group-item list-group-item-action py-2 ripple arrow" aria-current="true">
        <i class="bi bi-arrow-bar-right"></i>
    </a>
</div>