@using IdentityServer4.Extensions
@model AuthWebApi.DTO.ViewModels.Manage.DeleteViewModel

@{
    ViewData["Title"] = "Profile";
    Layout = "_AdminLayout";
}

<h1>Профиль</h1>
<hr />
<h3>Пользователя @Model.Username</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name">Имя</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Surname">Фамилия</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Patronymic">Отчество</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Patronymic
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Birthday">День рождения</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Birthday
        </dd>
    </dl>
    <div>
        <a asp-controller="Manage" asp-action="Edit" asp-route-id="@User.GetSubjectId()" class="btn btn-primary">Изменить</a> | <a asp-action="Index">Вернуться</a>
    </div>
</div>